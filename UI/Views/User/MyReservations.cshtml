
@{
    ViewData["Title"] = "MyReservations";
    Layout = "~/Views/_Layout.cshtml";
}

    <div class="container">
        <h1 class="page-title">@Localizer["booking_history"]</h1>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <aside class="user-profile-sidebar">
                    <div class="user-profile-avatar text-center">
                        <img src="~/img/300x300.png" alt="Image Alternative text" title="AMaze">
                        <h5>@Context.User.Identity.Name</h5>
                    </div>
                    <ul class="list user-profile-nav">
                        <li>
                            <a href="~/User/Profile"><i class="fa fa-cog"></i>@Localizer["settings"]</a>
                        </li>
                        <li>
                            <a href="~/User/MyReservations"><i class="fa fa-clock-o"></i>@Localizer["booking_history"]</a>
                        </li>
                        <li>
                            <a href="~/User/MyCredits"><i class="fa fa-credit-card"></i>@Localizer["credits"]</a>
                        </li>
                        <li>
                            <a href="~/User/MyHomes"><i class="fa fa-heart-o"></i>@Localizer["my_homes"]</a>
                        </li>
                        <li>
                            <a href="~/User/MyFavorites"><i class="fa fa-heart-o"></i>@Localizer["favorites"]</a>
                        </li>
                    </ul>
                </aside>
            </div>
            <div class="col-md-9">
                <div class="checkbox">
                    <label>
                        <div class="i-check"><input class="i-check" type="checkbox" style="position: absolute; opacity: 0;"><ins class="iCheck-helper" style="position: absolute; top: 0%; left: 0%; display: block; width: 100%; height: 100%; margin: 0px; padding: 0px; background: rgb(255, 255, 255); border: 0px; opacity: 0;"></ins></div>Show only current trip
                    </label>
                </div>
                <table class="table table-bordered table-striped table-booking-history">
                    <thead>
                        <tr>
                            <th>@Localizer["type"]</th>
                            <th>@Localizer["title"]</th>
                            <th>@Localizer["location"]</th>
                            <th>@Localizer["order_date"]</th>
                            <th>@Localizer["execution_date"]</th>
                            <th>@Localizer["cost"]</th>
                            <th>@Localizer["current"]</th>
                            <th>@Localizer["cancel"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="booking-history-type">
                                <i class="fa fa-plane"></i><small>flight</small>
                            </td>
